const getDb = require('../util/database').getDb

class User {

	constructor(username, email){
		this.name = username
		this.email = email	
	}

	save(){
		const db = getDb()
		db.collection('User').insertOne(this)	
	}


	static 	findById(userId){
		const db = getDb()	
		db.collection('User').findOne({_id:userId})
		.then((response)=>{
			console.log(response)	
		})
		.catch((error)=>{
			console.log(error)	
		})
	
	}


}

module.exports = User
